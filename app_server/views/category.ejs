<!DOCTYPE html>
<html>
  <head>
      <% include ..\views\partials\head %>
  </head>
  <body>
    
      <header>
          <% include ..\views\partials\header %>
      </header>
      
    </br>
      
    

      
      <div>
        <ol>
            <% _.each(categories, function(topC) { %>
            <% _.each(topC.categories, function(subC) { %>
              
                <h1><%=topC.page_title%></h1>
                
                <li>
                <h2><%= subC.name %></h1>
                <p><%= subC.page_description %></p>
                <% if (subC.image) { %>
                <div>
                    <img src="/images/<%= subC.image %>">
                </div>
                <% } %></br>
                <button type="button" class="btn btn-info btn-lg"> <a href="/<%= topC.id %>/<%= subC.id %>"> View Products</a></button>
                
            </li>
            
            <% }); %>      
            <% }); %>              
        </ol>
    </div> 










      <footer>
        <% include ..\views\partials\footer %>
      </footer>
  
  </body>
    
  </html>